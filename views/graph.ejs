<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ECharts</title>
    <script src="/javascripts/echarts.common.min.js"></script>
    <style>
      .fill{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        margin: 0;
      }
      .chart{
        width: <%= width %>px;
        height: <%= height %>px;
      }
    </style>
</head>
<body>
    <div id="chart" class="chart"></div>
    <script type="text/javascript">
      var myChart = echarts.init(document.getElementById('chart'));
      var option = {
        title: {
          text: '<%= title %>'
        },
        tooltip: {
          trigger: 'axis'
        },
        legend: {
          data:[]
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        toolbox: {
          feature: {
          }
        },
        xAxis: {
          type: 'category',
          boundaryGap: false,
          data: []
        },
        yAxis: {
          type: 'value'
        },
        series: [{
          name: '<%= title %>',
          type: 'line',
          stack: '总量',
          data: []
        }]
      }

      option.xAxis.data = [
        <% dataX.forEach(function(x) {%>
          "<%= x %>",
        <% }); %>
      ];

      option.series[0].data = [
        <% dataY.forEach(function(y) {%>
          <%= y %>,
        <% }); %>
      ];

      myChart.setOption(option);
    </script>
</body>
</html>
