<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ECharts</title>
    <script src="/javascripts/echarts.common.min.js"></script>
    <style>
      .fill{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        margin: 0;
      }
      .chart{
        width: <%= width %>px;
        height: <%= height %>px;
      }
    </style>
</head>
<body>
    <div id="chart" class="chart"></div>
    <script type="text/javascript">
      var myChart = echarts.init(document.getElementById('chart'));
      var option = {
        title: {
          text: '传感器折线图'
        },
        tooltip: {
          trigger: 'axis'
        },
        legend: {
          data:[
            <% titles.forEach(function(title) { %>
              '<%= title %>',
            <% }) %>
          ]
        },
        grid: {
          left: '3%',
          right: '4%',
          bottom: '3%',
          containLabel: true
        },
        toolbox: {
          feature: {
          }
        },
        xAxis: {
          type: 'category',
          boundaryGap: false,
          data: []
        },
        yAxis: {
          type: 'value'
        },
        series: [
          <% for (var i in dataY) { %>
            {
              name: '<%= titles[i] %>',
              type: 'line',
              stack: '总量',
              data: [
                <% dataY[i].forEach(function (y) { %>
                  <%= y %>,
                <% }); %>
              ]
            },
          <% } %>
        ]
      }

      option.xAxis.data = [
        <% dataX.forEach(function(x) {%>
          "<%= x %>",
        <% }); %>
      ];

      myChart.setOption(option);
    </script>
</body>
</html>
